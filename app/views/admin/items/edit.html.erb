<div class = "container d-flex justify-content-center">
  <div class="col-md-5 mt-5">

    <h1 class="mb-2 text-center">Edit an item</h1>

    <%= form_for(@item, url: admin_item_path(@item.id), method: "patch") do |f| %>

    <div class="form-group">
      <%= f.label :title %><br />
      <%= f.text_field :title, autofocus: true, autocomplete: "title", class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %><br />
      <%= f.text_area :description, autofocus: true, autocomplete: "description", class:"form-control" %>
      <small>minimum 6 caract√®res</small>
    </div>

    <div class="form-group">
      <%= f.label :price %><br />
      <%= f.number_field :price, autofocus: true, autocomplete: "price", class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :image_url %><br />
      <%= f.text_field :image_url, autofocus: true, autocomplete: "image_url", class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :category_id %><br />
      <%= f.text_field :category_id, autofocus: true, autocomplete: "category_id", class:"form-control" %>
    </div>


    <%= f.submit "Enregistrer la modification", class:"btn btn-primary form-control mt-2" %>

    <% end %>
  </div>
</div>
