<div class="container d-flex justify-content-center">

  <div class="col-md-5 mt-5">
<h2 class="text-center">Modifier mon profil</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :new_password, "Nouveau mot de passe" %> <i>(Laisser vide si vous ne voulez pas le changer)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caractères minimum</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :new_password_confirmation, "Confirmer le nouveau mot de passe" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password, "Mot de passe actuel" %> <i>(Nécessaire pour confirmer les changements)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Mettre à jour", class:"btn btn-primary form-control mt-2" %>
  </div>
<% end %>
<hr class="separator" />
<h3><%= button_to "Fermer mon compte", registration_path(resource_name), data: { confirm: "Êts-vous certain ?" }, method: :delete, class:"btn form-control mt-2", style:"background-color: red; color: white;" %></h3>

<p class="text-center mt-4"><%= link_to "Retour", :back, class: "btn btn-info btn-return" %></p>
</div>
</div>